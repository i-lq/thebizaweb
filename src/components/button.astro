---

interface Props {
    href?: string;
    id?: string;
}

const { href } = Astro.props;

---

<biz-button id={Astro.props.id}>
    <a href={href}>
        <div class="kbVx">
            <p><slot></slot></p>
        </div>
        <div class="zb4Ui">
            <div class="pkr5">

            </div>
        </div>
    </a>
</biz-button>

<script>
    class bizButton extends HTMLElement {
        constructor() {
            super();

            var zb4Ui = this.getElementsByClassName(`zb4Ui`)[0];

            this.addEventListener('mouseover', () => {
                zb4Ui.style.justifyContent = '';
            });
            
            this.addEventListener('mouseout', () => {
                zb4Ui.style.justifyContent = 'flex-end';
            });
            
        }
    }

    customElements.define("biz-button", bizButton);
</script>

<style>
    biz-button {
        width: fit-content;
        height: 2em;
        margin: 0;
        padding: 3px 4px;
        display: flex;
        justify-content: center;
        align-items: center;
        pointer-events: stroke;
        border-radius: 2px;
        overflow: hidden;
        background: white;
    }
    
    biz-button>a {
        width: fit-content;
        height: 100%;
        margin: 0;
        display: grid;
        justify-content: center;
        align-items: center;
        align-content: center;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        font-family: Rubik;
        text-decoration: none;
        color: rgb(0 0 0);
        font-weight: bold;
        transition: color .25s;
    }
    
    .kbVx,.zb4Ui {
        z-index: 3;
        width: 100%;
        height: 100%;
        grid-column: 1 / -1;
        grid-row: 1 / -1;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 0;
    }
    
    .zb4Ui {
        justify-content: flex-start;
        z-index: 1;
        background: white;
    }
    
    .pkr5 {
        width: 0%;
        height: 100%;
        margin: 0;
        padding: 0;
        background: rgb(var(--act1));
        transition: width .25s;
    }

    .kbVx>p {
        margin: 0;
        padding: 0;
    }

    biz-button:hover a {
        color: rgb(var(--ov));
    }

    biz-button:hover .pkr5 {
        width: 100%;
    }
</style>