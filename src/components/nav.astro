---
import logo from '../../public/logo.png';

interface Props {
    transparent?: boolean
}

const { transparent= false } = Astro.props;

---

<biz-nav class:list={{'su':transparent}} transition:persist>
    <div class="gm wdz">
        <a href="/thebizaweb">
            <div class="fI0w">
                <img class="i57" src={logo.src} alt="Logo">
                <img src={logo.src} alt="Logo">
            </div>
            <div class="dPTV">
                <p class="r07">
                    BIZA
                </p>
            </div>
        </a>
        <div class="iF4j">
            <!--  -->
        </div>
    </div>
    <div class="gm bvg">
        <div class="yQff"></div>
    </div>
</biz-nav>

<script>
    class bizNav extends HTMLElement {
        constructor() {
            super();

            var test = () => {
                var pages = [];
                if (pages.includes(window.location.pathname)) {
                    this.classList.add(`su`);
                } else {
                    this.classList.remove(`su`);
                };
            };
            document.addEventListener('astro:page-load', () => {
                test();
            });
            
        }
    }

    customElements.define("biz-nav", bizNav);
</script>

<style>
    biz-nav {
        width: 100vw;
        height: var(--wh);
        --wh: 4em;
        margin: 0;
        padding: 0;
        display: grid;
        justify-content: flex-start;
        align-items: flex-start;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        user-select: none;
        pointer-events: none;
        position: fixed;
        z-index: 3;
        overflow: hidden;
    }

    biz-nav a {
        width: fit-content;
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        text-decoration: none;
        color: unset;
        pointer-events: stroke;
    }

    .gm {
        grid-column: 1 / -1;
        grid-row: 1 / -1;
        width: 100%;
        height: var(--wh);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        z-index: 2;
    }
    
    .gm.bvg {
        z-index: 1;
        background: rgb(var(--zt) / 75%);
        backdrop-filter: blur(3em);
    }

    .su .gm.bvg {
        opacity: 0;
    }
    
    .gm.wdz {
        margin: 0 0 0 1em;
    }
</style>

<style>
    .gm.wdz>a>.fI0w {
        display: flex;
        margin: 0;
        padding: 0;
        height: 100%;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        min-width: 3em;
    }

    .gm.wdz>a>.fI0w>img {
        margin: 0;
        padding: 0;
        height: calc(100% - 1em);
    }

    .gm.wdz>a>.fI0w>img.i57 {
        margin: 0 0 0 -4em;
        padding: 0;
        height: calc(100% - 1em);
        position: relative;
        transform: translateX(2em) scale(5);
        filter: blur(2em);
    }
</style>

<style>
    .dPTV {
        width: fit-content;
        height: 100%;
        margin: 0 0 0 1em;
        padding: 0;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }   

    p.r07 {
        font-family: Teko;
        margin: 0;
        padding: 0;
        font-size: 2.5em;
    }
</style>

<style>
    .iF4j {
        width: -webkit-fill-available;
        height: 100%;
        margin: 0 0 0 1em;
        padding: 0;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
    }
</style>