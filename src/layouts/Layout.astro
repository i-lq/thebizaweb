<style>
	footer {
		min-height: 10em;
		width: 100vw;
		height: 10em;
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 1fr;
		overflow: hidden;
	}

	.cxc {
		width: 100%;
		height: 100%;
		grid-column: 1 / -1;
		grid-row: 1 / -1;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		z-index: 1;
	}

	.cxc.rxi {
		z-index: 0;
	}

	.cxc.pgb {
		flex-direction: column;
	}

	.cxc.rxi>.dMi {
		width: 60vw;
		height: 100%;
		filter: blur(4em);
		background: rgb(var(--act1));
		transform: scale(1.5);
	}

	.cxc.pgb>.w24 {
		width: calc(100vw - 1em);
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		flex-wrap: nowrap;
	}
</style>

<style is:global>
	::-webkit-scrollbar {
	  width: 2px;
	}
	
	::-webkit-scrollbar-track {
	  background: transparent;
	}
	
	::-webkit-scrollbar-thumb {
	  background: rgb(var(--ov) / 50%);
	}
	
	::-webkit-scrollbar-thumb:hover {
	  background:rgb(var(--ov));
	}
</style>

<style is:global>
	:root {
		--cb: 16 16 16;
		--zt: 13 13 13;
		--ov: 255 255 255;
		--act1: 83 27 42;
		--act2: 85 16 35;
	}

	body {
		margin: 0;
		overflow-x: hidden;
	}

	html {
		background: rgb(var(--cb));
		color: rgb(var(--ov));
		font-family: Rubik;
	}
</style>


<style>
	.hHL {
		width: 100vw;
		height: 100vh;
		margin: 0;
		padding: 0;
		overflow: hidden auto;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		flex-wrap: nowrap;
		position: fixed;
		z-index: 0;
		scroll-behavior: smooth;
	}
</style>

